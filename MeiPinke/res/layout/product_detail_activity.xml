<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
         />
    
    <ImageView
        android:id="@+id/detail_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/c_1" />

    <TextView
        android:id="@+id/detail_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:text="TextView" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
         <TextView
        android:id="@+id/detail_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp"
        android:text="model: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/detail_avail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/detail_model"
        android:text="availability" 
        android:textSize="20dp"/>
    
    <TextView
        android:id="@+id/detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/detail_model"
        android:text="price" 
        android:textSize="20sp"
        android:textColor="@color/orangered"/>

    <TextView
        android:id="@+id/detail_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp"
        android:layout_alignLeft="@+id/detail_price"
        android:layout_alignParentBottom="true"
        android:text="Ex Tax"
        android:textSize="15dp"
        android:textColor="@color/grey" />

</RelativeLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/detail_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty: "
            android:textStyle="bold" 
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/detail_edt_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ems="10"
            android:text="1" 
            android:numeric="integer">
            <requestFocus />
            </EditText>


    </LinearLayout>    

     <Button
            android:id="@+id/detail_add"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_selector_cart"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:text="Add to Cart" 
            android:textSize="25sp"
            android:textColor="@color/white" 
            />

        <Button
            android:id="@+id/detail_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector_save"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Save for later"
            android:textSize="25sp"
            android:textColor="@color/white" />
   
<TextView
        android:id="@+id/detail_line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:text="TextView" />
 <TextView
        android:id="@+id/detail_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:text="Description" />
</LinearLayout>
</ScrollView>