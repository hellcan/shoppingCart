<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/cust_contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Purchase a Gift Certificate"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/brown"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cust_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@color/grey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Recipient's Name: "
        android:textSize="15sp"
        android:textStyle="bold" />
    
    <EditText
        android:id="@+id/ex_edt_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_selector_login"
        android:inputType="text"
        android:maxLength="16"
        android:paddingLeft="10.0sp"
        android:saveEnabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Recipient's Email: "
        android:textSize="15sp"
        android:textStyle="bold" />
    
    <EditText
        android:id="@+id/ex_edt_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_selector_login"
        android:inputType="text"
        android:maxLength="16"
        android:paddingLeft="10.0sp"
        android:saveEnabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Your Name:"
        android:textSize="15sp"
        android:textStyle="bold" />
    
    <EditText
        android:id="@+id/ex_edt_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_selector_login"
        android:inputType="text"
        android:maxLength="16"
        android:paddingLeft="10.0sp"
        android:saveEnabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Your Email:"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ex_edt_4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_selector_login"
        android:inputType="text"
        android:maxLength="16"
        android:paddingLeft="10.0sp"
        android:saveEnabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="E-Mail Address:"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ex_edt_5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_selector_login"
        android:inputType="text"
        android:maxLength="16"
        android:paddingLeft="10.0sp"
        android:layout_marginBottom="10dp"
        android:saveEnabled="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

<RadioGroup
    android:id="@+id/rbtn_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_below="@+id/tv" >

    <RadioButton
        android:id="@+id/rbtn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Birthday" />

    <RadioButton
        android:id="@+id/rbtn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="theme"
        android:text="Christmas" />

    <RadioButton
        android:id="@+id/rbtn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General " />
</RadioGroup>
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:text="Gift Certificate Theme: "
        android:textSize="15sp"
        android:textStyle="bold" />
    
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Message: "
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ex_edt_6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.25"
        android:background="@drawable/edit_selector_login"
        android:inputType="text"
        android:maxLength="16"
        android:hint="Optional"
        android:paddingLeft="10.0sp"
        android:saveEnabled="true" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Amount: (Value must be between $1.00 and $1,000.00)"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ex_edt_7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.25"
        android:background="@drawable/edit_selector_login"
        android:inputType="text"
        android:maxLength="16"
        android:hint=""
        android:paddingLeft="10.0sp"
        android:saveEnabled="true"
        android:text="25.00" />
    
    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@color/grey" />
    
    <Button 
        android:id="@+id/ex_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/white"
        android:background="@drawable/button_selector_signout"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="6dp"
        android:layout_gravity="center_horizontal"/>
    
</LinearLayout>

</ScrollView>